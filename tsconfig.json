{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": false,
		"noImplicitThis": false,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"removeComments": true,
		"outDir": "dist/",
		"preserveConstEnums": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es6"
	},
	"include": [
		"src/**/*.ts",
		"typings-own/**/*"
	],
	"exclude": [
		"**/*.spec.ts"
	]
}